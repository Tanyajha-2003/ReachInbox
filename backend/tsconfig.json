{
  "compilerOptions": {
    "outDir": "dist",       
    "rootDir": "src",        
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],  
  "exclude": ["dist", "node_modules"]
}
